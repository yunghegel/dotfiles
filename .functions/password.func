# password: Generates a random password.
# Usage: password [length]
password() {
    local length="${1:-16}"
    if ! [[ "$length" =~ ^[0-9]+$ ]] || [ "$length" -lt 1 ]; then
        echo "Usage: password [length]"
        return 1
    fi
    # Use /dev/urandom to get random bytes, then base64 encode them
    # and take the first 'length' characters.
    LC_ALL=C tr -dc 'A-Za-z0-9' < /dev/urandom | head -c "$length"
    echo
}
